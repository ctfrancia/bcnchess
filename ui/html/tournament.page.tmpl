{{template "base" .}}

{{define "title"}}Tournament #{{.Tournament.ID}}{{end}}

{{define "main"}}
<div class='snippet'>
    {{with .Tournament}}
    <div class='metadata'>
        <time><strong>{{.Title}}</strong></time>
        <time><strong> Share tournament: https://localhost:4000/tournament/{{.ID}}</strong></time>
    </div>
    <div class='metadata'>
        <strong>Location</strong>: {{.Location}}<br/>
        <strong>Host Contact</strong>: {{.TournamentContact}}
    </div>
    <img src='{{.Poster}}'>
    <pre><code>{{.AdditionalInformation}}</code></pre>
    <div class='metadata'>
        <div class='metadata'>
            <time>Date: {{humanDate .TournamentDate}}</time>
            <time>Starts: {{.MatchTimeStart}}</time>
        </div>
        <div class='metadata'>
            <time>Rated: {{.Rated}}</time>
            <time>Online: {{.IsOnline}}</time>
        </div>
        <div class='metadata'>
            <time>Tournament Type: {{.TournamentType}}</time>
            <time>Time Control: {{.TimeControl}}</time>
        </div>
        <div class='metadata'>
            <time>Created: {{humanDate .Created}}</time>
            <time>Expires: {{humanDate .Expires}}</time>
        </div>
    </div>
    {{end}}
</div>
{{end}}
